import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner in=new Scanner(System.in);
		int t=in.nextInt();
		for(int j=0; j<t; j++){
		    int n=in.nextInt();
		    String s=in.next();
		    int res=0;
		    for(int i=0; i<n;i++){
		        if(s.charAt(i) == '0'){
		            res=n-(i+1);
		            break;
		        }
		    }
		    System.out.println(res);
		}// your code goes here

	}
}
